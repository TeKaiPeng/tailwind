      <button class="mx-2 text-orange-600">Basic Info</button>
      <button class="mx-2">Meta Data</button>
      <button class="mx-2">Permissions</button>
    </div>

    <div class="flex my-2">
      <div class="w-1/3 h-48 bg-gradient-to-b from-gray-500 via-white to-orange-300">
        <img class="" src="" alt="">
        <button class="rounded p-2 bg-gray-200">
          <i class="fas fa-camera-retro"></i>
          Upload Image
        </button>
      </div>
      <div class="w-2/3 mx-4 text-sm">
        <p class="mb-4">Title</p>
        <input class="mb-4 border border-gray-400 rounded w-full p-1" type="text" placeholder="songsname">
        <div class="mb-4 flex">
          <p class="text-gray-500">Soundsgood.com/aabbccdd/</p>
          <input class="w-full" type="text" placeholder="songsname">
          <button class=""><i class="fas fa-pencil-alt"></i></button>
        </div>
        <p class="mb-4">Genre</p>
        <p class="mb-4">Additional Tags</p>
        <input class="mb-4 border border-gray-400 rounded w-full p-1" type="text" placeholder="Add tags to describe the genre and mood of your track">
        <p class="mb-4">Description</p>
        <input class="mb-4 border border-gray-400 rounded w-full p-1" type="text" placeholder="Describe your tracks">
        <div class="text-xs">
          <span class="py-2 ">Privacy: </span>
          <input type="radio" value="Public" name="Privacy" id="Public">
          <label for="Public">Public</label>
          <input type="radio" value="Private" name="Privacy" id="Private">
          <label for="Private">Private</label>
        </div>
      </div>
    
    
    </div>
  
  
  
  
  
  </div>

